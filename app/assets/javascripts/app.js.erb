// get/set cookie methods from W3 schools, http://www.w3schools.com/js/js_cookies.asp
RR.setCookie = function _setCookie(cname, cvalue, exdays) {
  var d = new Date();
  d.setTime(d.getTime() + (exdays*24*60*60*1000));
  var expires = "expires="+ d.toUTCString();
  document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
}

RR.getCookie = function _getCookie(cname) {
  var name = cname + "=";
  var decodedCookie = decodeURIComponent(document.cookie);
  var ca = decodedCookie.split(';');
  for(var i = 0; i <ca.length; i++) {
      var c = ca[i];
      while (c.charAt(0) == ' ') {
          c = c.substring(1);
      }
      if (c.indexOf(name) == 0) {
          return c.substring(name.length, c.length);
      }
  }
  return "";
}

RR.clearCookies = function clearCookies(cookies) {
  for (var i = 0; i < cookies.length; i++) {
    RR.setCookie(cookies[i], '', 0);
  }
}

RR.fadeFlashes = function fadeFlashes() {
  $('.devise-alert').fadeOut(2000);
}
